@{
    ViewData["Title"] = "Login";
}

@model e_advert.web.Models.Accounts.LoginModel

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        <h4>Login using your email id and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If you are not a member you can signup here
            </a>
        </h5>
        <hr />
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    @*<label asp-for="RememberMe"></label>*@
                    <input asp-for="RememberMe" />
                    @Html.DisplayName("RememberMe")
                </div>
            </div>

            <button type="submit">Login</button>
        </form>
    </div>
</div>
